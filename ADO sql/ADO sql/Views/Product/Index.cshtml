@model IEnumerable<ADO_sql.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Facturas</h2>


@if (TempData["InfoMessage"] != null)
{
<div class="alert alert-info">
    <strong>Information: </strong> @TempData["InfoMessage"]
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span>&times;</span>
    </button>

</div>

}





<p>
    @Html.ActionLink("Crear Nuevo Producto", "Crete",null,new {@class= "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remark)
        </th>
        <th>Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ProductID },new {@class = "btn btn-primary" }) 
                @Html.ActionLink("Detalles", "Details", new { id = item.ProductID }, new { @class = "btn btn-success" }) 
                @Html.ActionLink("Eliminar", "Delete", new { id = item.ProductID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
